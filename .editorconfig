# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = tab
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.vue]
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = false

[*.scss]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[{package,bower}.json]
indent_style = space
indent_size = 2
